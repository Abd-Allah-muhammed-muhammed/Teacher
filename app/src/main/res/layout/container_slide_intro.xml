<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_12">


    <ImageView

        android:src="@drawable/intro_one"
        android:id="@+id/image_into"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <TextView

        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12"
        android:layout_marginEnd="@dimen/_12"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="title"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_24s" />


    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12"
        android:layout_marginEnd="@dimen/_12"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="description"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_18s" />

</LinearLayout>